<Page x:Class="AdministrationProgram.wpf.ConfigurationWizard.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="LoadingPage"
     Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Name="label" HorizontalAlignment="Left" />
        <ProgressBar Grid.Row="1" Name="progressBar"/>
        <Button Grid.Row="2" Name="cancelButton" Click="cancelButton_Click" Margin="0,5,0,0" HorizontalAlignment="Right" Content="Cancel"></Button>
    </Grid>
</Page>
