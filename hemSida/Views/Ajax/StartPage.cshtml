@model hemSida.Models.StartModel

@Html.Partial("~/Views/Shared/_Navigation.cshtml", null)

<div class="container" style="margin-top: 50px;">
    <center><img src="@Url.Content("~/Content/Images/log"+ new Random().Next(2,8) +".png")" class="img-responsive" alt="Ljus & Miljö AB"></center>

    <div class="input-group" style="margin-bottom: 20px; margin-top:100px;">
        <span class="input-group-btn">
            <button onclick="javaBass.Api.triggerSearch();" class="btn btn-default" type="button">Sök</button>
        </span>
        <form id="searchTextForm">
            <input type="text" id="searchTextBox" class="form-control" autofocus>
        </form>
       
    </div>
    <div class="alert alert-info text-center" role="alert"><strong>Tips!</strong>   Förenkla din sökning genom att använda dig av <strong>taggar</strong> som du ser nedanför. Du kan använda dig av fritext kombinerat med <strong>taggar</strong>.</div>
    <div class="list-group" style="margin-left:auto; margin-right:auto; max-width: 600px;">
        <p>
            @{
                bool a = true;
                foreach (var item in Model.results)
                {
                   <button onclick="javaBass.Api.search('#@item')" type="button" class="btn btn-@((a)?"primary":"success") btn-sm" style="margin-left: 1px;margin-top: 1px;margin-right: 1px;margin-bottom: 1px;">@item</button>
                   a=!a;
                }
            }
        </p>
    </div>

</div>
