
@model hemSida.Models.AccountCreationModel

<div class="container" style="margin-top: 50px;">
    <center>
        <h1 style="margin-top: 80px;margin-bottom: 30px;">
            Skapa konto
        </h1>
    </center>
</div>


<div class="row" style="margin-right:0px; text-align:left">

    <div class="col-md-3 col-md-offset-4">
        <form role="form">

            <div class="form-group">
                
                
                <label for="exampleInputAnvändarnamn1" style="margin-bottom:0px; margin-left: 5px">
                       Ange ett användarnamn
                </label>
                    

                <input type="email" class="form-control" id="exampleInputAnvändarnamn1" placeholder="Användarnamn">
            </div>

            <div class="form-group">

                <label for="exampleInputPassword1" style="margin-bottom:0px; margin-left:5px">
                    Ange lösenord
                </label>

                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Lösenord">
            </div>

            <div class="form-group">

                <label for="exampleInputPassword2" style="margin-bottom:0px; margin-left: 5px">
                    Upprepa lösenord
                </label>

                <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Upprepa lösenord">
            </div>
            <p align="right">
                <button type="button" class="btn btn-success btn-sm">Bekräfta</button>

            </p>
        </form>

    </div>

        <div class="col-md-3 col-md-offset-1">
            <h4><u>Personlig information</u></h4>
            <h5>@Html.Raw(Model.myUsername)</h5>
            <h5>Org Namn</h5>
            <h5>Telefon</h5>
            <h5><a href="mailto:#">mailaddress@example.com</a></h5>

        </div>

</div>


