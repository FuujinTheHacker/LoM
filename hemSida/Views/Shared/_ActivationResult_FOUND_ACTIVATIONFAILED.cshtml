@model hemSida.Models.AccountCreationModel

<div>

    <div class="container" style="margin-top: 50px;">
        <center>
            <h1 style="margin-top: 80px;margin-bottom: 30px;">
                Skapa konto
            </h1>
        </center>
    </div>

    <div class="row" style="margin-right:0px; text-align:left">

        <div class="col-md-3 col-md-offset-4">
            <form role="form" method="post">

                <div class="form-group">

                    <input name="anActivationKey" type="hidden" value="@Model.myActivationKey">

                    <label for="exampleInputAnvändarnamn1" style="margin-bottom:0px; margin-left: 5px">
                        Ange ett användarnamn
                    </label>


                    <input name="aName" type="text" class="form-control" placeholder="Användarnamn">
                </div>

                <div class="form-group">

                    <label for="exampleInputPassword1" style="margin-bottom:0px; margin-left:5px">
                        Ange lösenord
                    </label>

                    <input name="aPassword" type="password" class="form-control" placeholder="Lösenord">
                </div>

                <div class="form-group">

                    <label for="exampleInputPassword2" style="margin-bottom:0px; margin-left: 5px">
                        Upprepa lösenord
                    </label>

                    <input name="aPassword2" type="password" class="form-control" placeholder="Upprepa lösenord">
                </div>
                <p align="right">
                    <button type="submit" class="btn btn-success btn-sm">Bekräfta</button>
                </p>
            </form>
        </div>

        <div class="col-md-3 col-md-offset-1">
            <h4><u><b>Personlig information</b></u></h4>
            <h5><b>@Model.myOrgName</b></h5>
            <h5><b>@Model.myPhoneNumber</b></h5>
            <h5><b>@Model.myEmail</b></h5>
        </div>

    </div>

</div>